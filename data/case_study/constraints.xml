<rules>
    <rule>
        <id>city_restrain</id>
        <formula>
            <forall var = "v1" in = "cityA">
                <forall var = "v2" in = "cityB">
                    <not>
                        <bfunc name = "same">
                            <param pos = "1" var = "v1" field = "subject"/>
                            <param pos = "2" var = "v2" field = "subject"/>
                        </bfunc>
                    </not>
                </forall>
            </forall>
        </formula>
    </rule>
</rules>
